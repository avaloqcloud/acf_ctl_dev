title: "Avaloq Cloud Framwork"
description: "The Avaloq Cloud Framework helps to deploy banking services in the cloud"
informationalText: "This framework helps operators to set up a hosting environment for banking applications on cloud infrastructure. A base set of resources is provisioned and configured."
schemaVersion: 0.0.2
version: "20230801"
locale: "en"

variableGroups:
- title: "Oracle Cloud Settings"
  visible: true
  variables:
  - tenancy_ocid
  - class

- title: "Service Resident"
  visible: true
  variables:
  - parent
  - compartment_ocid
  - region
  - current_user_ocid
  - organization
  - solution
  - owner
  - stage
  - repository

- title: "Service Topology"
  visible: true
  variables:
  - host
  - nodes
  - container

- title: "Network Options"
  visible: true
  variables:
  - ipv6
  - internet
  - nat
  - osn

- title: "Domain Settings"
  visible: true
  variables:
  - amend

variables:
# Oracle Cloud Settings
  tenancy_ocid:
    title: "Tenancy ID"
    description: "The Oracle Cloud Identifier for your tenancy"
    visible: false
    type: string
    required: true

  class:
    title: "Classification"
    description: "Selecting the Universal Credit Consumption (UCC) Model preselects appropriate resource types"
    type: enum
    default: "FREE_TIER"
    required: true
    enum:
      - FREE_TIER
      - TRIAL
      - PAYG
      - UCC

# Service Configuration
  compartment_ocid:
    title: "Compartment ID"
    description: "The Oracle Cloud Identifier for your compartment"
    visible: false
    type: string
    required: true

  region:
    title: "Home Region"
    description: "The Oracle Cloud Identifier for your home region"
    visible: false
    type: string
    required: true
  
  current_user_ocid:
    title: "User ID"
    description: "The Oracle Cloud Identifier for the current user"
    visible: false
    type: string
    required: true
  
  parent:
    title: "Parent Compartment"
    description: "The Oracle Cloud Identifier for the root compartment. The default should only be changed by experienced users."
    type: oci:identity:compartment:id
    dependsOn:
      compartmentId: tenancy_ocid
      accessLevel: ANY
      lifecycleState: ACTIVE
    default: tenancy_ocid
    required: true

  organization:
    title: "Organization"
    description: "Identifier for the organization, owning the service"
    type: string
    default: "Organization"
    minLength: 1
    maxLength: 25
    pattern: "^[a-zA-Z]+$"
    required: true

  solution:
    title: "Name"
    description: "Identifier for the service, the name should be unique within the tenancy"
    type: string
    default: "Service"
    minLength: 1
    maxLength: 25
    pattern: "^[a-zA-Z]+$"
    required: true

  stage:
    title: "Lifecycle Stage"
    description: "Selecting the lifecycle stage preselects an appropriate collection of operational controls"
    type: enum
    default: "DEV"
    required: true
    enum:
      - DEV
      - SIT
      - UAT
      - PROD

  repository:
    title: "Source Code URL"
    description: "Provide an URL to your IaC repository"
    type: string
    required: false

  owner:
    title: "Owner"
    description: "Provide an eMail address for the technical administrator"
    type: string
    required: true

# Service Topology
  host:
    type: boolean
    title: "Application Hosting"
    required: false

  nodes:
    type: boolean
    title: "Distributed Data Processing"
    required: false

  container:
    type: boolean
    title: "Container Instances"
    required: false

  cluster:
    type: boolean
    title: "Kubernetes Service"
    required: false

# Network Options
  ipv6:
    type: boolean
    title: "IPv6"
    required: true
    default: false

  internet:
    type: enum
    title: "Internet access"
    required: true
    enum:
      - ENABLE
      - DISABLE

  nat:
    type: enum
    title: "NAT for private subnets"
    required: true
    enum:
      - ENABLE
      - DISABLE

  osn:
    type: enum
    title: "Scope of Oracle Cloud Services, attached to the service resident."
    required: true
    enum:
      - ALL
      - STORAGE
      - DISABLE

# Administration Domains
  amend:
    type: boolean
    title: "Allow administrator domains to be destroyed?"
    required: true